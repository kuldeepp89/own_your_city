extends ../partials/init.part.jade

block bodyBlock
  nav#navigation.fixed-top
    .container
      .row-fluid
        .span12.center
          // LOGO
          a.brand.pull-left(href='./')
            img(src='/public/images/logo.fw.png', alt='OwnYourCity')
          // END LOGO
          // MOBILE MENU BUTTON
          .mobile-menu(data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          // END MOBILE MENU BUTTON
          // MAIN MENU
          ul#main-menu.nav-collapse.collapse
            li
              a(href='/ ') Home
            li
              a(href='/#page-features') Features
            li
              a(href='/#page-about') About
            li
              a(href='/#page-contact') Contact
          // END MAIN MENU
          // SOCIAL ICONS
          .social-icons.hover-big.pull-right
            a.sicon-facebook(href='#')
              i Facebook
            a.sicon-twitter(href='#')
              i Twitter
            a.sicon-linkedin(href='#')
              i LinkedIn
            a.sicon-youtube(href='#')
              i Youtube
            a.sicon-pinterest(href='#')
              i Pinterest
  section#main
    .container-fluid
      include ../partials/flash.part.jade
      .row-fluid
        .span12
          .login-container.center
            .title.text-transparent Register
            hr.main
            form.login-form(method='post', action='/register')
              input(type='hidden', name='_csrf', value='#{csrfToken}')
              ul.fields-list
                li
                  i.icon-envelope-alt(style='float: left;')
                  input#email(type='text', autocomplete='off', name='email', placeholder='email')
                li
                  i.icon-user(style='float: left;')
                  input#first-name(type='text', autocomplete='off', name='name', placeholder='name')
                li
                  i.icon-user(style='float: left;')
                  input#age(type='text', autocomplete='off', name='age', placeholder='age')
                li
                  select.full-width(name='gender', data-placeholder='Choose a gender...')(style='background:transparent')
                    option Male
                    option Female
                li
                  i.icon-key
                  input#password(type='password', autocomplete='off', name='password', placeholder='password')
                li
                  i.icon-key
                  input#password-confirmation(type='password', autocomplete='off', name='confirmPassword', placeholder='confirm password')
              .actions.clearfix
                button.btn.btn-large.medium-blue.login-btn(type='submit')
                  | Register
                a.btn.btn-large.medium-blue.login-btn(href='/login')
                  | Go to Login
              hr.main
              .social-actions-title
                | Access using these social accounts
              hr.main
              .social-actions
                a.social-link.text-transparent(href='/auth/linkedin', rel='tooltip', data-placement='top', data-original-title='Linked Login')
                  i.icon-linkedin
