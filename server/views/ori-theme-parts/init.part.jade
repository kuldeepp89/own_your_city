doctype html
html
  head
    meta(charset='utf-8')
    // Always force latest IE rendering engine or request Chrome Frame
    meta(content='IE=edge,chrome=1', http-equiv='X-UA-Compatible')
    // Use title if it's in the page YAML frontmatter
    title #{title}
    link(href='/public/stylesheets/application.css', media='all', rel='stylesheet', type='text/css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,800')
    script(src='/public/javascripts/application.js', type='text/javascript')
    meta(name='viewport', content='width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0')
    // Le HTML5 shim, for IE6-8 support of HTML5 elements
    // there's an IE separated stylesheet with the following resets for IE
    //if lte IE 9
      script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')
      script(src='/public/javascripts/html5shiv.js', type='text/javascript')
      script(src='/public/javascripts/excanvas.js', type='text/javascript')
      script(src='/public/javascripts/ie_fix.js', type='text/javascript')
      link(href='/public/stylesheets/ie_fix.css', media='screen', rel='stylesheet', type='text/css')
  body
    block bodyBlock